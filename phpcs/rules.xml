<?xml version="1.0"?>
<ruleset name="Swe2019">
    <rule ref="PSR2">
        <exclude name="PEAR.Commenting.FileComment.Missing"/>
        <exclude name="Generic.WhiteSpace.DisallowTabIndent" />
    </rule>
    <rule ref="PSR1.Classes.ClassDeclaration">
        <severity>0</severity>
    </rule>
    <file>../application/views</file>
    <file>../application/models</file>
    <file>../application/controllers</file>
    <exclude-pattern>errors</exclude-pattern>
    <exclude-pattern>welcome</exclude-pattern>
    <arg name="colors"/>
</ruleset>